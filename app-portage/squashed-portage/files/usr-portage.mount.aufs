[Unit]
Description=Aufs layer for squashed portage

Requires=run-squashfs-portage.mount
After=run-squashfs-portage.mount
Before=squashed-portage.target
ConditionPathIsDirectory=/dev/shm/.portage-rw

[Mount]
What=aufs
Where=/usr/portage
Type=aufs
Options=nodev,noexec,br:/dev/shm/.portage-rw=rw:/run/squashfs/portage/=ro
