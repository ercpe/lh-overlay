start() {
	ebegin "Starting fuglu"
	start-stop-daemon --start --exec /usr/bin/fuglu --background -- ${FUGLU_ARGS}
	eend $*
}

stop() {
	ebegin "Stopping fuglu"
	start-stop-daemon --stop --exec /usr/bin/fuglu --pidfile "/run/fuglu.pid"
	eend $*
}
